import Foundation


class DataManagement{
    let defaults = NSUserDefaults.standardUserDefaults()
    
    enum defaultKeys{
        static let uninitializedKey = "uninitialized"
        static let IDKsKey = "numIDKs"
        static let musicVolumeKey = "musicVolume"
        static let soundVolumeKey = "soundVolume"
    }
    
    var uninitialized: Bool = false
    var numIDKs: Int = 5
    var musicVolume: Int = 100
    var soundVolume: Int = 100
    
    init(){
    }
    
    func setValues(){
        defaults.setValue(true, forKey: defaultKeys.uninitializedKey)
        if(!defaults.boolForKey(defaultKeys.uninitializedKey)){
            /*Set all values for first run after download here*/
            
            defaults.setValue(5, forKey: defaultKeys.IDKsKey)
            defaults.setValue(100, forKey: defaultKeys.musicVolumeKey)
            defaults.setValue(100, forKey: defaultKeys.soundVolumeKey)
        }
    }
    
    func getNumIDKs() ->Int{
        numIDKs = defaults.integerForKey(defaultKeys.IDKsKey)
        
        return numIDKs
    }
    
    func addNumIDKs(addNum: Int){
        numIDKs = defaults.integerForKey(defaultKeys.IDKsKey)
        
        numIDKs += addNum
        
        defaults.setValue(numIDKs, forKey: defaultKeys.IDKsKey)
    }
    
    func getMusicVolume() ->Int{
        musicVolume = defaults.integerForKey(defaultKeys.musicVolumeKey)
        
        return musicVolume
    }
    
    func setMusicVolume(newVolume: Int){
        defaults.setValue(musicVolume, forKey: defaultKeys.musicVolumeKey)
    }
    
    func getSoundVolume() ->Int{
        soundVolume = defaults.integerForKey(defaultKeys.soundVolumeKey)
        
        return soundVolume
    }
    
    func setSoundVolume(newVolume: Int){
        defaults.setValue(soundVolume, forKey: defaultKeys.soundVolumeKey)
    }
}







































