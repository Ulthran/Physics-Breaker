import Foundation
import UIKit


class ViewClass{
    
    func setUpMenuScene(){
        let startButton = UIButton()
        
        
        /*BUTTON: Start button*/
        startButton.setTitle("Start", forState: UIControlState.Normal)
        startButton.titleLabel!.font = UIFont(name: "AmericanTypewriter-Light", size: 30.0)
        startButton.frame = CGRect(x: (GameViewController.skView.view!.frame.size.width/2)-50, y: (MenuScene.view!.frame.size.height/2)+50, width: 100, height: 50)
        startButton.setTitleColor(UIColor.blackColor(), forState: UIControlState.Normal)
        startButton.addTarget(GameViewController.viewDidLoad.menuScene, action: "goToDrawingBoard:", forControlEvents: UIControlEvents.TouchUpInside)
        
        MenuScene.view.addSubview(startButton)
    }
}
